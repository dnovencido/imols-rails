<div class="services">
    <% if @services.any? %>
    <div class="grid gap-4 grid-cols-3 grid-rows-3">
    <% @services.each do |service| %>
        <div class=" max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <h5 class="mb-2 text-xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= service.name %></h5>
            <p class="mb-3 font-normal text-gray-500 dark:text-gray-400"><%= service.description %></p>
            <hr>
            <div class="flex flex-col justify-between leading-normal mt-5">
                <h6 class="mb-2 text-md font-semibold text-gray-900 dark:text-white">Services:</h6>
                <ol class="max-w-md space-y-1 text-gray-500 list-decimal list-inside dark:text-gray-400">
                    <% if service.categories.any? %>
                        <% service.categories.each do |category| %>
                        <li>
                            <%= link_to category.name, new_services_service_transaction_path(id: category.id)  %>
                        </li>
                        <% end %>
                    <% end %>
                </ol>
            </div>
        </div>
    <% end %>
    </div>
    <% end %>
</div>
