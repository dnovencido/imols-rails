<div class="new-services">
    <div class="mb-5">
        <h4 class="text-2xl font-bold dark:text-white">Apply Services</h4>
    </div>
    <%= render 'shared/errors', obj: @service_transaction %>
    <div class="new-services-form flex justify-center items-center">
        <div class="basis-full bg-white border border-gray-200 rounded-lg shadow sm:p-4 md:p-6 dark:bg-gray-800 dark:border-gray-700">
            <% if (!@form.nil?) %>
            <%= render @form, service_transaction: @service_transaction %>
            <% else %>
                <p>Application form cannot be found.</p>
            <% end %>
        </div>
    </div>
</div>