<%= form_with(model: [:services, service_transaction], local: true) do |f|%>
    <div class="flex-auto">
        <%= f.label :category_id, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a service" }, { class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-green-500 dark:focus:border-green-500" }  %>
    </div>
    <div class="flex-auto mt-3">
        <%= label_tag 'service_transaction[service_transaction_details_attributes][service_details][application_type]', 'Type of Application', class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= select_tag 'service_transaction[service_transaction_details_attributes][service_details][application_type]', options_for_select([["New", "new"], ["Renewal", "ren"]]), prompt: "Select type of application...", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-green-500 dark:focus:border-green-500" %>
    </div>
    <div class="flex-auto mt-3">
        <%= label_tag 'service_transaction[service_transaction_details_attributes][service_details][radio_service_type]', 'Type of Radio Service', class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
        <%= select_tag 'service_transaction[service_transaction_details_attributes][service_details][radio_service_type]', options_for_select([["Fixed and Land Mobile", "FLM"], ["Aeronotical", "AE"], ["Maritime", "MT"], ["Broadcast", "BC"], ["Others", "others"]]), prompt: "Select type of radio service...", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-green-500 dark:focus:border-green-500" %>
    </div>
    <div class="actions mt-5">
        <%= f.submit "Create", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>    
<% end %>
